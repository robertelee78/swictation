{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window - allows event listening and window operations",
  "windows": ["main"],
  "permissions": [
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:image:default",
    "core:tray:default",
    "core:menu:default",
    "clipboard-manager:default",
    "clipboard-manager:allow-write-text"
  ]
}
